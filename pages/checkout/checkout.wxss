.container {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.store-card {
  background: linear-gradient(135deg, #ffe5ec, #fff3f3);
  border-radius: 18px;
  padding: 16px;
  box-shadow: 0 12px 28px rgba(226, 140, 156, 0.14);
}

.store-name {
  font-size: 18px;
  font-weight: 600;
  color: #2b1b25;
}

.store-desc {
  font-size: 14px;
  color: #a26b7d;
  margin-top: 4px;
}

.store-info {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 12px;
  color: #6a5561;
}

.summary {
  background: #fff;
  border-radius: 16px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 6px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
}

.summary-title {
  font-weight: 600;
  color: #c1536d;
}

.section {
  background: #fff;
  border-radius: 16px;
  padding: 12px 16px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
}

.field-label {
  font-size: 13px;
  color: #9a7a88;
  margin-bottom: 6px;
}

.picker,
input,
textarea {
  width: 100%;
  border-radius: 12px;
  background: #f8f4f6;
  padding: 12px;
  font-size: 14px;
  color: #2b1b25;
  box-sizing: border-box;
}

textarea {
  min-height: 90px;
}

button {
  margin-top: 4px;
  border-radius: 999px;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}

.tips {
  font-size: 12px;
  color: #8a6574;
  line-height: 1.6;
  padding-left: 4px;
}

.cart-line {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 10px;
  padding: 10px 0;
  border-bottom: 1px dashed rgba(0, 0, 0, 0.08);
}

.cart-line:last-child {
  border-bottom: none;
}

.cart-line-main {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.cart-title {
  font-weight: 600;
  color: #2b1b25;
}

.cart-spec {
  font-size: 12px;
  color: #9a7a88;
}

.cart-qty {
  color: #6a5561;
}

.cart-price {
  font-weight: 600;
  color: #d04363;
}

.summary-total {
  margin-top: 10px;
  text-align: right;
  font-weight: 600;
  color: #2b1b25;
}
