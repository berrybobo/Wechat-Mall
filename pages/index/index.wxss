.home {
  padding: 16px;
  padding-bottom: 120px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.card {
  background: #fff;
  border-radius: 18px;
  padding: 18px;
  box-shadow: 0 12px 30px rgba(226, 140, 156, 0.12);
}

.hero {
  display: flex;
  gap: 16px;
  align-items: center;
  background: linear-gradient(135deg, #ffe5ec, #f8f2ff);
  overflow: hidden;
}

.hero-info .brand {
  font-size: 20px;
  font-weight: 600;
  color: #2b1b25;
}

.hero-info .tagline {
  font-size: 16px;
  margin-top: 2px;
  color: #c1536d;
}

.hero-info .slogan {
  font-size: 14px;
  color: #6a5561;
  margin-top: 8px;
}

.feature-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-top: 12px;
}

.feature {
  padding: 2px 10px;
  border-radius: 999px;
  font-size: 12px;
  background: rgba(255, 255, 255, 0.6);
  color: #9c4d64;
}

.hero-img {
  width: 140px;
  height: 140px;
  border-radius: 16px;
}

.highlight .section-title {
  font-size: 18px;
  font-weight: 600;
  color: #412a33;
}

.highlight .section-desc {
  margin-top: 6px;
  color: #6f5b63;
  line-height: 1.5;
}

.perk-list {
  margin-top: 14px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.perk {
  background: #fdf7fb;
  border-radius: 12px;
  padding: 10px;
}

.perk-title {
  font-size: 14px;
  font-weight: 600;
  color: #c1536d;
}

.perk-desc {
  font-size: 12px;
  color: #6f5b63;
  margin-top: 4px;
  line-height: 1.4;
}

.section-head {
  padding: 0 4px;
}

.section-head .title {
  font-size: 18px;
  font-weight: 600;
  color: #2b1b25;
}

.section-head .subtitle {
  font-size: 12px;
  color: #9a7a88;
  margin-top: 2px;
}

.product-card {
  border-radius: 18px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 10px 26px rgba(33, 6, 46, 0.08);
}

.product-cover {
  width: 100%;
  height: 180px;
}

.card-body {
  padding: 14px;
}

.card-body .name {
  font-size: 17px;
  font-weight: 600;
  color: #31121f;
}

.card-body .sub {
  font-size: 13px;
  color: #8a6574;
  margin-top: 4px;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin: 10px 0;
}

.tag {
  font-size: 11px;
  padding: 2px 8px;
  border-radius: 999px;
  background: #f8edf1;
  color: #c1536d;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer .price {
  color: #d04262;
  font-size: 18px;
  font-weight: 600;
}

.footer .cta {
  font-size: 12px;
  color: #fff;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
  padding: 6px 12px;
  border-radius: 999px;
}

.process {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.step {
  padding-bottom: 14px;
  border-bottom: 1px dashed rgba(0, 0, 0, 0.08);
}

.step:last-child {
  border-bottom: none;
}

.step-index {
  font-size: 12px;
  color: #c1536d;
  font-weight: 600;
}

.step-title {
  font-size: 15px;
  font-weight: 600;
  color: #2d1b24;
  margin-top: 2px;
}

.step-desc {
  font-size: 13px;
  color: #78636c;
  margin-top: 4px;
  line-height: 1.5;
}

.community {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.community-item {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  color: #6f5b63;
}

.community-item .label {
  font-weight: 600;
  color: #c1536d;
}

.menu-tabs {
  display: flex;
  gap: 10px;
  padding: 0 4px;
}

.tab {
  padding: 6px 14px;
  border-radius: 999px;
  font-size: 13px;
  color: #8a6574;
  background: #f8f4f6;
}

.tab.active {
  color: #fff;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}

.menu {
  display: flex;
  gap: 12px;
}

.menu-categories {
  width: 92px;
  background: #fff;
  border-radius: 16px;
  padding: 8px 0;
  box-shadow: 0 10px 26px rgba(33, 6, 46, 0.06);
}

.cat {
  padding: 10px 12px;
  font-size: 13px;
  color: #6f5b63;
  border-left: 3px solid transparent;
}

.cat.active {
  color: #c1536d;
  font-weight: 600;
  background: #fdf7fb;
  border-left-color: #c1536d;
}

.menu-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.menu-item {
  display: flex;
  gap: 10px;
  padding: 12px;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 10px 26px rgba(33, 6, 46, 0.06);
}

.menu-cover {
  width: 86px;
  height: 86px;
  border-radius: 12px;
}

.menu-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.menu-title {
  font-size: 15px;
  font-weight: 600;
  color: #2b1b25;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-desc {
  font-size: 12px;
  color: #8a6574;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.menu-bottom {
  margin-top: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-price {
  font-size: 16px;
  font-weight: 600;
  color: #d04262;
}

.menu-add {
  width: 32px;
  height: 32px;
  line-height: 32px;
  padding: 0;
  border-radius: 999px;
  background: linear-gradient(135deg, #87c24a, #a3d65c);
  color: #fff;
}

.menu-add::after {
  border: none;
}

.menu-empty {
  padding: 30px 0;
  text-align: center;
  color: #8a6574;
}

.cart-bar {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: calc(env(safe-area-inset-bottom) + 16px);
  background: #fff;
  border-radius: 18px;
  padding: 10px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 16px 36px rgba(0, 0, 0, 0.12);
}

.cart-info {
  position: relative;
  display: flex;
  align-items: center;
  gap: 10px;
}

.cart-badge {
  position: absolute;
  left: -6px;
  top: -6px;
  padding: 2px 6px;
  border-radius: 999px;
  background: #d04262;
  color: #fff;
  font-size: 10px;
}

.cart-label {
  font-weight: 600;
  color: #2b1b25;
}

.cart-total {
  font-weight: 600;
  color: #d04262;
}

.cart-checkout {
  border-radius: 999px;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}

.cart-checkout::after {
  border: none;
}
