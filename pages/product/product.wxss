.detail {
  padding-bottom: 80px;
}

.hero-cover {
  width: 100%;
  height: 260px;
}

.card {
  margin: 16px;
  padding: 16px;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 12px 30px rgba(209, 144, 161, 0.12);
}

.main .title {
  font-size: 20px;
  font-weight: 600;
  color: #2b1b25;
}

.main .subtitle {
  color: #a26b7d;
  margin-top: 4px;
}

.price-line {
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 10px 0;
}

.price {
  font-size: 22px;
  color: #d04363;
  font-weight: 600;
}

.badge {
  font-size: 12px;
  color: #c1536d;
  background: #fdecef;
  padding: 2px 10px;
  border-radius: 999px;
}

.desc {
  color: #6a5561;
  line-height: 1.6;
}

.spec-card .card-title,
.tags-card .card-title,
.pairing-card .card-title,
.service-card .card-title {
  font-size: 15px;
  font-weight: 600;
  color: #2d1b24;
  margin-bottom: 10px;
}

.selector {
  padding: 14px;
  border-radius: 12px;
  background: #f8f4f6;
  display: flex;
  justify-content: space-between;
  color: #6a5561;
}

.arrow {
  font-size: 18px;
}

.hint {
  font-size: 12px;
  color: #9a7a88;
  margin-top: 8px;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.chip {
  padding: 4px 10px;
  background: #fef1f3;
  color: #c1536d;
  border-radius: 999px;
  font-size: 12px;
}

.pair-row {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.pair-row:last-child {
  border-bottom: none;
}

.pair-label {
  font-size: 13px;
  color: #9a7a88;
}

.pair-value {
  font-size: 14px;
  color: #47323b;
  text-align: right;
  width: 60%;
}

.pair-row.note .pair-value {
  color: #c1536d;
}

.service-item {
  padding: 10px 0;
  border-bottom: 1px dashed rgba(0, 0, 0, 0.08);
}

.service-item:last-child {
  border-bottom: none;
}

.service-title {
  font-weight: 600;
  color: #2b1b25;
}

.service-desc {
  font-size: 13px;
  color: #6f5b63;
  margin-top: 4px;
}

.actions {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 84px);
  left: 0;
  right: 0;
  padding: 12px 16px calc(env(safe-area-inset-bottom) + 12px);
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05);
}

.price-block {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.price-block .spec-label {
  font-size: 12px;
  color: #9a7a88;
}
.actions .buttons {
  display: flex;
  gap: 10px;
}

.actions .buttons button {
  min-width: 120px;
  border-radius: 999px;
}

.actions .add-cart {
  background: #f8f4f6;
  color: #c1536d;
}

.actions .buy-now {
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}
