page {
  background: #faf7f8;
}

.guoli {
  padding: 16px;
  padding-bottom: 200px;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.store-card {
  background: linear-gradient(135deg, #ffe5ec, #fff3f3);
  border-radius: 18px;
  padding: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  box-shadow: 0 12px 28px rgba(226, 140, 156, 0.14);
}

.store-main {
  flex: 1;
  min-width: 0;
}

.store-name {
  font-size: 18px;
  font-weight: 600;
  color: #2b1b25;
}

.store-desc {
  font-size: 13px;
  color: #a26b7d;
  margin-top: 4px;
}

.store-notice {
  font-size: 12px;
  color: #6a5561;
  margin-top: 8px;
  line-height: 1.4;
}

.store-cart {
  border-radius: 999px;
  background: #fff;
  color: #c1536d;
}

.store-cart::after {
  border: none;
}

.top-tabs {
  display: flex;
  gap: 18px;
  padding: 0 4px;
}

.top-tab {
  font-size: 14px;
  color: #8a6574;
  padding: 6px 0;
  border-bottom: 2px solid transparent;
}

.top-tab.active {
  color: #2b1b25;
  font-weight: 600;
  border-bottom-color: #c1536d;
}

.menu-tabs {
  display: flex;
  gap: 10px;
  padding: 0 4px;
}

.tab {
  padding: 6px 14px;
  border-radius: 999px;
  font-size: 13px;
  color: #8a6574;
  background: #f8f4f6;
}

.tab.active {
  color: #fff;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}

.menu {
  display: flex;
  gap: 12px;
}

.menu-categories {
  width: 92px;
  background: #fff;
  border-radius: 16px;
  padding: 8px 0;
  box-shadow: 0 10px 26px rgba(33, 6, 46, 0.06);
}

.cat {
  padding: 10px 12px;
  font-size: 13px;
  color: #6f5b63;
  border-left: 3px solid transparent;
}

.cat.active {
  color: #c1536d;
  font-weight: 600;
  background: #fdf7fb;
  border-left-color: #c1536d;
}

.menu-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.menu-item {
  display: flex;
  gap: 10px;
  padding: 12px;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 10px 26px rgba(33, 6, 46, 0.06);
}

.menu-cover {
  width: 86px;
  height: 86px;
  border-radius: 12px;
}

.menu-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.menu-title {
  font-size: 15px;
  font-weight: 600;
  color: #2b1b25;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-desc {
  font-size: 12px;
  color: #8a6574;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.menu-bottom {
  margin-top: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-price {
  font-size: 16px;
  font-weight: 600;
  color: #d04262;
}

.menu-add {
  width: 32px;
  height: 32px;
  line-height: 32px;
  padding: 0;
  border-radius: 999px;
  background: linear-gradient(135deg, #87c24a, #a3d65c);
  color: #fff;
}

.menu-add::after {
  border: none;
}

.menu-empty {
  padding: 30px 0;
  text-align: center;
  color: #8a6574;
}

.store-detail {
  background: #fff;
  border-radius: 18px;
  padding: 16px;
  box-shadow: 0 10px 26px rgba(33, 6, 46, 0.06);
}

.store-detail-title {
  font-size: 16px;
  font-weight: 600;
  color: #2b1b25;
  margin-bottom: 12px;
}

.store-detail-row {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  padding: 10px 0;
  border-bottom: 1px dashed rgba(0, 0, 0, 0.08);
}

.store-detail-row:last-child {
  border-bottom: none;
}

.store-detail-row .k {
  font-size: 13px;
  color: #9a7a88;
}

.store-detail-row .v {
  font-size: 13px;
  color: #2b1b25;
  text-align: right;
  width: 65%;
}

.cart-bar {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: calc(env(safe-area-inset-bottom) + 96px);
  background: #fff;
  border-radius: 18px;
  padding: 10px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 16px 36px rgba(0, 0, 0, 0.12);
}

.cart-info {
  position: relative;
  display: flex;
  align-items: center;
  gap: 10px;
}

.cart-badge {
  position: absolute;
  left: -6px;
  top: -6px;
  padding: 2px 6px;
  border-radius: 999px;
  background: #d04262;
  color: #fff;
  font-size: 10px;
}

.cart-label {
  font-weight: 600;
  color: #2b1b25;
}

.cart-total {
  font-weight: 600;
  color: #d04262;
}

.cart-checkout {
  border-radius: 999px;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}

.cart-checkout::after {
  border: none;
}
