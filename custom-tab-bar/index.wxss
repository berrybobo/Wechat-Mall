/* custom-tab-bar */
.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12px 16px calc(env(safe-area-inset-bottom) + 12px);
  box-sizing: border-box;
  pointer-events: none;
}

.tabbar-inner {
  pointer-events: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 6px;
  border-radius: 22px;
  background: rgba(255, 255, 255, 0.92);
  box-shadow: 0 16px 36px rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(12px);
}

.item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4px;
  color: #8a6574;
  padding: 2px 0;
}

.icon-wrap {
  position: relative;
}

.icon {
  width: 34px;
  height: 34px;
  border-radius: 14px;
  background: #f8f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: 600;
  color: #c1536d;
}

.item.active .icon {
  color: #fff;
  background: linear-gradient(135deg, #c1536d, #de8f9f);
}

.text {
  font-size: 11px;
  line-height: 1;
}

.item.active .text {
  color: #2b1b25;
  font-weight: 600;
}

.badge {
  position: absolute;
  right: -8px;
  top: -6px;
  min-width: 16px;
  height: 16px;
  padding: 0 4px;
  border-radius: 999px;
  background: #d04262;
  color: #fff;
  font-size: 10px;
  line-height: 16px;
  text-align: center;
  box-sizing: border-box;
  border: 2px solid rgba(255, 255, 255, 0.92);
}
